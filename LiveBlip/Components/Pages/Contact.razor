					<MudText
						Align="Align.Center" Color="Color.Secondary"
					>
						liveblip@ithegi.co.za
					</MudText>
				</MudContainer>

				<MudContainer>
					<MudLink
						Href="https://maps.app.goo.gl/q9DRmHqSRhYKuXKg7"
						Style="margin-left: calc(50% - 50px); margin-right: calc(50% - 50px)"
