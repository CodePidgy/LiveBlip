<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Live Blip</title>
    <link rel="icon" href="img/pin.png" type="image/png">
    <link rel="stylesheet" href="LiveBlipStyleSheet.css">
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCi5WsI4DSnlh4kWH3ve9drttxN7OfBaEI&callback=initMap" async defer></script>

    <style>
        /* Set the size of the map */
        #map {
            height: 600px;
            width: 65%;
            margin-left: 30%;
        }
    </style>
    <script>
        let map;

        // Function to initialize the map
        function initMap() {
            // Try to initialize the map
            try {
                map = new google.maps.Map(document.getElementById('map'), {
                    center: { lat: -34.397, lng: 150.644 },
                    zoom: 8
                });
            } catch (e) {
                console.error('Error initializing map:', e);
            }
        }

        // Function to place a marker on the map based on input coordinates
        function placeMarker() {
            // Get the latitude and longitude values from the input fields
            const lat = parseFloat(40.7128);
            const lng = parseFloat(74.0060);

            // Check if the input values are valid numbers
            if (isNaN(lat) || isNaN(lng)) {
                alert('Please enter valid latitude and longitude values.');
                return;
            }

            // Create a location object with the input coordinates
            const location = { lat: lat, lng: lng };

            // Place a marker on the map at the specified location
            const marker = new google.maps.Marker({
                position: location,
                map: map
            });

            // Center the map on the new marker
            map.setCenter(location);
        }

        function placeMarker2() {
            // Get the latitude and longitude values from the input fields
            const lat = parseFloat(40.7128);
            const lng = parseFloat(74.0060);

            // Check if the input values are valid numbers
            if (isNaN(lat) || isNaN(lng)) {
                alert('Please enter valid latitude and longitude values.');
                return;
            }

            // Create a location object with the input coordinates
            const location = { lat: lat, lng: lng };

            // Place a marker on the map at the specified location
            const marker = new google.maps.Marker({
                position: location,
                map: map
            });

            // Center the map on the new marker
            map.setCenter(location);
        }

    </script>

</head>

<body background="img/map.png" onload="initMap()">

    <div class="logo1">
        <img src="img/LiveBlipLogo.png" alt="Logo">
        <ul>
            <li><a href="#">Ithegi Electronics<img src="img/AccountImg.png" alt="Logo"></a></li>
        </ul>
    </div>

    <div class="deviceList">

        <div class="Heading">
            Devices (1)
        </div>

        <div class="deviceBlock">
            <button onclick="placeMarker()"><img src="img/pin.png" alt="Device Image"></button>
            <span>Device Name</span>
        </div>

        <div class="deviceBlock">
            <button onclick="placeMarker2()"><img src="img/pin.png" alt="Device Image"></button>
            <span>Device Name2</span>
        </div>

        <div class="deviceSettings">
            <p>Add new device </p>
            <p>Settings </p>
        </div>

    </div>

    <div id="map"></div>
</body>

</html>
