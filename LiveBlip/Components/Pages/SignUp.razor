@page "/signup"
@using LiveBlip.Models
@using Microsoft.AspNetCore.Components
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Sign Up</PageTitle>

<h1>Sign Up</h1>

<div class="signup-card">
    <div class="signup-heading">
        <h1>Sign Up</h1>
    </div>
    <div class="login-form">
        <EditForm Model="signUpModel" OnValidSubmit="HandleValidSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" />

            <div class="form-group">
                <InputText id="username" class="form-control" @bind-Value="signUpModel.regUname" placeholder="Username" />
            </div>

			<div class="form-group">
                <InputText id="email" type="email" class="form-control" @bind-Value="signUpModel.Email" placeholder="Email" />
            </div>

            <div class="form-group">
                <InputText id="password" type="password" class="form-control" @bind-Value="signUpModel.regPword" placeholder="Password" />
            </div>

            <div class="form-group">
                <InputText id="repeat-password" type="password" class="form-control" @bind-Value="signUpModel.confirmPword" placeholder="Repeat Password" />
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Sign Up</button>
            </div>
        </EditForm>
    </div>
</div>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

@code {
    [SupplyParameterFromForm]
    private SignUpModel signUpModel {get; set;} = new();
    private string errorMessage;

    private async Task HandleValidSubmit()
    {
        // Add your sign-up logic here
        // For example, validate the data, save to the database, etc.

        if (signUpModel.regPword != signUpModel.regPword)
        {
            errorMessage = "Passwords do not match.";
            return;
        }

        // Simulate successful sign-up and navigate to another page
        Navigation.NavigateTo("/");
    }
}
