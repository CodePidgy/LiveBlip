@page "/signup"
@using LiveBlip.Models
@using Microsoft.AspNetCore.Components
@inject NavigationManager Navigation


<PageTitle>Sign Up</PageTitle>

<div class="signup-card">

    <div class="login-form">
		<div class="signup-heading">
        	<h1>Sign Up</h1>
    	</div>
        <EditForm Model="signUpModel" OnValidSubmit="HandleValidSubmit" FormName="signupForm">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" />

            <div class="form-group">
                <InputText id="username" class="form-control-username" @bind-Value="signUpModel.Username" placeholder="Username" />
            </div>

			<div class="form-group">
                <InputText id="email" type="email" class="form-control-username" @bind-Value="signUpModel.Email" placeholder="Email" />
            </div>

            <div class="form-group">
                <InputText id="password" type="password" class="form-control-password" @bind-Value="signUpModel.Password" placeholder="Password" />
            </div>

            <div class="form-group">
                <InputText id="repeat-password" type="password" class="form-control-password" @bind-Value="signUpModel.confirmPassword" placeholder="Confirm Password" />
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Sign Up</button>
            </div>

			<div class="row5-col1">
				<p class="account-sign">Have an account?</p>
			</div>

			<div class="row5-col2">
				<a href class ="register-redirect" ="/">Sign Up</a>
			</div>
        </EditForm>
    </div>
</div>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

@code {
    [SupplyParameterFromForm]
    private SignUpModel signUpModel {get; set;} = new();
    private string errorMessage;

    private async Task HandleValidSubmit()
    {
        // Add your sign-up logic here
        // For example, validate the data, save to the database, etc.

        if (signUpModel.Password != signUpModel.Password)
        {
            errorMessage = "Passwords do not match.";
            return;
        }

        // Simulate successful sign-up and navigate to another page
        Navigation.NavigateTo("/");
    }
}
